# üåü SECURE ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env.local and fill in your actual values
# ‚ö†Ô∏è NEVER commit .env.local to version control - it's in .gitignore

# =================================================================
# üîê AUTHENTICATION SETTINGS
# =================================================================

# NextAuth Configuration
NEXTAUTH_URL="https://your-deployment-url.vercel.app"
NEXTAUTH_SECRET="your-auth-secret-here"

# Alternative naming (both can be used)
AUTH_SECRET="your-auth-secret-here"

# =================================================================
# üîë GOOGLE OAUTH SETTINGS
# =================================================================

# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# =================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =================================================================

# Choose ONE of the following database options:

# Option 1: Prisma Accelerate (Recommended for production)
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# Option 2: Direct PostgreSQL connection
# DATABASE_URL="postgresql://username:password@host:5432/database"

# =================================================================
# üí∞ PAYMENT GATEWAYS
# =================================================================

# Paystack Integration
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key"
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key"

# Flutterwave Integration (optional)
FLUTTERWAVE_PUBLIC_KEY="FLWPUBK_TEST_your_flw_public_key"
FLUTTERWAVE_SECRET_KEY="FLWSECK_TEST_your_flw_secret_key"

# =================================================================
# üìß EMAIL CONFIGURATION
# =================================================================

SMTP_HOST="mail.smtp2go.com"
SMTP_PORT="587"
SMTP_USER="your-email@smtp-provider.com"
SMTP_PASS="your-smtp-password"
SMTP_FROM_EMAIL="your-email@smtp-provider.com"

# =================================================================
# üìä ANALYTICS & MONITORING
# =================================================================

ANALYTICS_ID="G-your-ga4-id"  # Google Analytics ID (optional)

# =================================================================
# üß† AI/ML SERVICES (OPTIONAL)
# =================================================================

OPENAI_API_KEY="sk-proj-your-openai-api-key"
HUGGINGFACE_API_KEY="hf_your-huggingface-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"
ANTHROPIC_API_KEY="sk-ant-api03_your-anthropic-api-key"

# =================================================================
# üîß APPLICATION SETTINGS
# =================================================================

# Environment
ENVIRONMENT="development"  # development | production
NODE_ENV="development"

# Daily points system
DAILY_POINTS_AMOUNT="5"
POINTS_PER_SCAN="1"
POINTS_PRICE_PER_NAIRA="100"

# File upload limits
MAX_FILE_SIZE="20971520"  # 20MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# =================================================================
# üîí SECURITY KEYS
# =================================================================

# Cron Jobs Secret (Auto-generated)
CRON_SECRET_KEY="your-generated-cron-secret-key"

# =================================================================
# üì± MISCELLANEOUS
# =================================================================

# NAFDAC API
NAFDAC_BASE_URL="https://nafdac.gov.ng/category/recalls-and-alerts/"
REQUEST_TIMEOUT="30000"  # 30 seconds

# Git Repository (can stay as is)
GITHUB="https://github.com/your-username/your-repo.git"

# AI Features
ENABLE_AI_ENHANCEMENT="true"

# =================================================================
# üö® IMPORTANT SECURITY NOTES:
#
# 1. NEVER commit this file to version control
# 2. ALWAYS use environment variables in production
# 3. Keep secrets secret - don't share them
# 4. Regularly rotate sensitive keys
# 5. Use different values for dev/test/production
# =================================================================
